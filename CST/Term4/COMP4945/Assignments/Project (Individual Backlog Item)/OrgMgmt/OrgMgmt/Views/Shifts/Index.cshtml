@model IEnumerable<OrgMgmt.Models.Shift>

@{
    ViewData["Title"] = "Shifts";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Shifts</h1>
    <a asp-action="Create" class="btn btn-primary">+ Create New Shift</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No shifts have been created yet. Click the button above to create one.</div>
}
else
{
    <div class="card">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Recurrence</th>
                        <th>Pattern</th>
                        <th class="text-end" style="width: 180px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold align-middle">@item.Name</td>
                            <td class="align-middle">@item.StartTime.ToString(@"hh\:mm")</td>
                            <td class="align-middle">@item.EndTime.ToString(@"hh\:mm")</td>
                            <td class="align-middle"><span class="badge bg-info text-dark">@item.RecurrenceType</span></td>
                            <td class="align-middle text-muted">@(item.RecurrencePattern ?? "â€”")</td>
                            <td class="text-end align-middle">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-muted">
            <small>@Model.Count() shift(s) total</small>
        </div>
    </div>
}