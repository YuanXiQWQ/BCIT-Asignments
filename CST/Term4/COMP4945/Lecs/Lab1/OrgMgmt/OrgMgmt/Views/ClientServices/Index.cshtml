@model IEnumerable<OrgMgmt.Models.ClientService>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Type)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { clientId = item.ClientId, serviceId = item.ServiceId }) |
                @Html.ActionLink("Details", "Details", new { clientId = item.ClientId, serviceId = item.ServiceId }) |
                @Html.ActionLink("Delete", "Delete", new { clientId = item.ClientId, serviceId = item.ServiceId })
            </td>
        </tr>
}
    </tbody>
</table>
