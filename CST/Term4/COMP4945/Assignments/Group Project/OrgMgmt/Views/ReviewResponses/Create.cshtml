@model OrgMgmt.Models.ReviewResponse

@{
    ViewData["Title"] = "Create Review Response";
}

<h1>Create Review Response</h1>

<h4>ReviewResponse</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PerformanceReviewId" class="control-label"></label>
                <select asp-for="PerformanceReviewId" class ="form-control" asp-items="ViewBag.PerformanceReviewId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ReviewQuestionId" class="control-label"></label>
                <select asp-for="ReviewQuestionId" class ="form-control" asp-items="ViewBag.ReviewQuestionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ResponseText" class="control-label"></label>
                <input asp-for="ResponseText" class="form-control" />
                <span asp-validation-for="ResponseText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
