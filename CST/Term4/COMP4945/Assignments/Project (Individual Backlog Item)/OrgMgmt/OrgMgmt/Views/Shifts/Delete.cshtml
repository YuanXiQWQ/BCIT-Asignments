@model OrgMgmt.Models.Shift

@{
    ViewData["Title"] = "Delete Shift";
}

<h1>Delete Shift</h1>
<hr/>
<div class="row">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Are you sure you want to delete this shift?</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>
                    <dt class="col-sm-4">Start Time</dt>
                    <dd class="col-sm-8">@Model.StartTime.ToString(@"hh\:mm")</dd>
                    <dt class="col-sm-4">End Time</dt>
                    <dd class="col-sm-8">@Model.EndTime.ToString(@"hh\:mm")</dd>
                    <dt class="col-sm-4">Recurrence</dt>
                    <dd class="col-sm-8"><span class="badge bg-info text-dark">@Model.RecurrenceType</span></dd>
                    <dt class="col-sm-4">Pattern</dt>
                    <dd class="col-sm-8">@(Model.RecurrencePattern ?? "â€”")</dd>
                </dl>
            </div>
            <div class="card-footer d-flex gap-2">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id"/>
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                </form>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </div>
    </div>
</div>